{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
        {
            "matchManagers": [
                "poetry"
            ],
            "matchUpdateTypes": ["major"],
            "enabled": false,
            "addLabels": ["python", "major update"]
        },
        {
            "matchManagers": [
                "poetry"
            ],
            "matchUpdateTypes": ["minor", "patch"],
            "addLabels": ["python"]
        }
  ]
}
